//javascript//
/ 1. Machine à écrire pour le titre
const text = "Debout malgré tout";
const titleElement = document.getElementById("main-title");
let index = 0;

function typeWriter() {
  if (index < text.length) {
    titleElement.innerHTML += text.charAt(index);
    index++;
    setTimeout(typeWriter, 100);
  }
}

typeWriter();

// 2. Citation inspirante aléatoire
const quotes = [
  "Celui qui se relève est plus fort que celui qui n'est jamais tombé.",
  "Ce n’est pas la chute qui compte, c’est le courage de se relever.",
  "Chaque combat mène quelque part… même s’il est silencieux.",
  "Ton histoire n’est pas finie. C’est juste un chapitre difficile.",
  "Allah ne t’abandonne jamais. Même quand toi, tu doutes.",
];
document.getElementById("quote").textContent =
  quotes[Math.floor(Math.random() * quotes.length)];

// 3. Bouton "Retour en haut"
const btn = document.getElementById("backToTop");

window.onscroll = function () {
  btn.style.display = window.scrollY > 300 ? "block" : "none";
};

btn.onclick = function () {
  window.scrollTo({ top: 0, behavior: "smooth" });
};

      
